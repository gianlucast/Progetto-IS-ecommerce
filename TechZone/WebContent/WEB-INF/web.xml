<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>Storage</display-name>
 <welcome-file-list>
    <welcome-file>HomePage.jsp</welcome-file>
  </welcome-file-list>
  <resource-ref>
    <description>JNDI reference to a data source</description>
    <res-ref-name>jdbc/storage</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>
  <servlet>
    <servlet-name>LoginControl</servlet-name>
    <servlet-class>it.techzone.control.LoginControl</servlet-class>
  </servlet>
  
  <servlet>
    <servlet-name>ProductViewControl</servlet-name>
    <servlet-class>it.techzone.control.ProductViewControl</servlet-class>
  </servlet>
  
  <servlet>
  	<servlet-name>RegisterControl</servlet-name>
  	<servlet-class>it.techzone.control.RegisterControl</servlet-class>
  </servlet>
  
  <servlet>
  	<servlet-name>AddToCartControl</servlet-name>
  	<servlet-class>it.techzone.control.AddToCartControl</servlet-class>
  </servlet>
  
  <servlet>
  	<servlet-name>CartViewControl</servlet-name>
  	<servlet-class>it.techzone.control.CartViewControl</servlet-class>
  </servlet>
 
 <servlet>
  	<servlet-name>LogoutControl</servlet-name>
  	<servlet-class>it.techzone.control.LogoutControl</servlet-class>
  </servlet> 
  
  <servlet>
  	<servlet-name>ModInCartControl</servlet-name>
  	<servlet-class>it.techzone.control.ModInCartControl</servlet-class>
  </servlet> 
  
  <servlet-mapping>
    <servlet-name>LoginControl</servlet-name>
    <url-pattern>/logincontrol</url-pattern>
  </servlet-mapping>
  
   <servlet-mapping>
    <servlet-name>ProductViewControl</servlet-name>
    <url-pattern>/productviewcontrol</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>RegisterControl</servlet-name>
    <url-pattern>/user</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>AddToCartControl</servlet-name>
    <url-pattern>/addtocartcontrol</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>CartViewControl</servlet-name>
    <url-pattern>/cartviewcontrol</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>LogoutControl</servlet-name>
    <url-pattern>/logoutcontrol</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>ModInCartControl</servlet-name>
    <url-pattern>/modincartcontrol</url-pattern>
  </servlet-mapping>
</web-app>